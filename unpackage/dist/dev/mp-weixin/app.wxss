
/* 全局样式重置 */
page {
  background-color: #F5F5F5;
  font-size: 14px;
  color: #333333;
}

/* 全局颜色变量 */
:root {
  --color-primary: #55AD67;
  --color-secondary: #FF9F43;
  --color-bg: #F5F5F5;
  --color-card: #FFFFFF;
  --color-text-primary: #333333;
  --color-text-secondary: #666666;
  --color-text-auxiliary: #999999;
  --color-border: #EEEEEE;
}

/* 按钮通用样式 */
.btn-primary {
  background-color: var(--color-primary);
  color: #FFFFFF;
  border-radius: 8rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  transition: background-color 0.2s;
}
.btn-primary:active {
  background-color: #4AA35A;
}
.btn-secondary {
  background-color: #E5E5E5;
  color: var(--color-text-secondary);
  border-radius: 8rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 16px;
  transition: background-color 0.2s;
}
.btn-secondary:active {
  background-color: #D5D5D5;
}
.btn-action {
  background-color: var(--color-secondary);
  color: #FFFFFF;
  border-radius: 8rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  transition: background-color 0.2s;
}
.btn-action:active {
  background-color: #E88E38;
}

/* 表单输入框 */
.input-item {
  background-color: var(--color-card);
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 1px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid var(--color-border);
}
.input-item label {
  width: 120rpx;
  font-size: 14px;
  color: var(--color-text-secondary);
  padding-left: 30rpx;
}
.input-item input {
  flex: 1;
  height: 100%;
  border: none;
  outline: none;
  font-size: 14px;
  color: var(--color-text-primary);
  padding-right: 30rpx;
}
.input-item input::-webkit-input-placeholder {
  color: var(--color-text-auxiliary);
}
.input-item input::placeholder {
  color: var(--color-text-auxiliary);
}

/* 卡片样式 */
.card {
  background-color: var(--color-card);
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 文字样式 */
.text-title {
  font-size: 18px;
  font-weight: bold;
  color: var(--color-text-primary);
}
.text-secondary {
  font-size: 14px;
  color: var(--color-text-secondary);
}
.text-auxiliary {
  font-size: 12px;
  color: var(--color-text-auxiliary);
}

/* 页面边距 */
.page-content {
  padding: 0 30rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}
.loading-content {
  background-color: rgba(0, 0, 0, 0.7);
  color: #FFFFFF;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 14px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: var(--color-text-auxiliary);
  font-size: 14px;
}
