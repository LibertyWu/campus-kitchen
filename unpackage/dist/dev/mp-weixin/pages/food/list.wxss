
.container.data-v-2f17086e {
  background-color: var(--color-bg);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 搜索栏样式 */
.search-bar.data-v-2f17086e {
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.search-input.data-v-2f17086e {
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 25rpx;
  padding: 0 20rpx;
  height: 50rpx;
}
.search-icon.data-v-2f17086e {
  font-size: 16px;
  color: var(--color-text-secondary);
  margin-right: 10rpx;
}
.search-input input.data-v-2f17086e {
  flex: 1;
  font-size: 14px;
  color: var(--color-text-primary);
  background: transparent;
  border: none;
  outline: none;
}
.search-input input.data-v-2f17086e::-webkit-input-placeholder {
  color: var(--color-text-auxiliary);
}
.search-input input.data-v-2f17086e::placeholder {
  color: var(--color-text-auxiliary);
}

/* 分类标签样式 */
.category-tabs.data-v-2f17086e {
  background-color: #FFFFFF;
  padding: 15rpx 0;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}
.category-scroll.data-v-2f17086e {
  white-space: nowrap;
  padding: 0 20rpx;
}
.category-tab.data-v-2f17086e {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin-right: 16rpx;
  font-size: 14px;
  color: var(--color-text-secondary);
  background-color: #F5F5F5;
  border-radius: 20rpx;
  transition: all 0.2s;
}
.category-tab.active.data-v-2f17086e {
  color: #FFFFFF;
  background-color: var(--color-primary);
}

/* 食材列表样式 */
.food-list.data-v-2f17086e {
  padding: 15rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}
.food-card.data-v-2f17086e {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s, box-shadow 0.2s;
}
.food-card.data-v-2f17086e:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}
.food-image.data-v-2f17086e {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}
.food-image image.data-v-2f17086e {
  width: 100%;
  height: 100%;
}
.food-info.data-v-2f17086e {
  padding: 16rpx;
}
.food-name.data-v-2f17086e {
  display: block;
  font-size: 15px;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.food-category.data-v-2f17086e {
  display: block;
  font-size: 12px;
  color: var(--color-text-secondary);
  margin-bottom: 10rpx;
}
.food-price-stock.data-v-2f17086e {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.food-price.data-v-2f17086e {
  font-size: 14px;
  font-weight: bold;
  color: #FF3300;
}
.food-stock.data-v-2f17086e {
  font-size: 11px;
  color: var(--color-text-auxiliary);
}
.food-actions.data-v-2f17086e {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add-btn.data-v-2f17086e {
  padding: 8rpx 20rpx;
  font-size: 13px;
  border-radius: 16rpx;
  background-color: var(--color-primary);
  color: #FFFFFF;
  transition: background-color 0.2s;
}
.add-btn.data-v-2f17086e:active {
  background-color: #4AA35A;
}

/* 数量控制样式 */
.quantity-control.data-v-2f17086e {
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 16rpx;
  overflow: hidden;
}
.quantity-btn.data-v-2f17086e {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: var(--color-text-secondary);
  background-color: #F5F5F5;
}
.quantity-btn.data-v-2f17086e:active {
  background-color: #E8E8E8;
}
.quantity.data-v-2f17086e {
  width: 50rpx;
  text-align: center;
  font-size: 13px;
  color: var(--color-text-primary);
  background-color: #FFFFFF;
  border-left: 1rpx solid #E8E8E8;
  border-right: 1rpx solid #E8E8E8;
}

/* 空状态样式 */
.empty-state.data-v-2f17086e {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: var(--color-text-auxiliary);
  font-size: 14px;
  grid-column: 1 / -1;
}
.empty-icon.data-v-2f17086e {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

/* 购物车底部样式 */
.cart-footer.data-v-2f17086e {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 15rpx 30rpx;
  box-shadow: 0 -2rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-info.data-v-2f17086e {
  flex: 1;
}
.cart-count.data-v-2f17086e {
  display: block;
  font-size: 12px;
  color: var(--color-text-secondary);
  margin-bottom: 5rpx;
}
.cart-total.data-v-2f17086e {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #FF3300;
}
.checkout-btn.data-v-2f17086e {
  padding: 12rpx 32rpx;
  font-size: 14px;
  border-radius: 20rpx;
  background-color: var(--color-primary);
  color: #FFFFFF;
  transition: background-color 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(74, 163, 90, 0.3);
}
.checkout-btn.data-v-2f17086e:active {
  background-color: #4AA35A;
  box-shadow: 0 1rpx 4rpx rgba(74, 163, 90, 0.3);
}

/* 响应式设计 */
@media (max-width: 375px) {
.food-list.data-v-2f17086e {
    grid-template-columns: 1fr;
}
.food-card.data-v-2f17086e {
    display: flex;
}
.food-image.data-v-2f17086e {
    width: 120rpx;
    height: 120rpx;
}
.food-info.data-v-2f17086e {
    flex: 1;
}
}
