  justify-content: center;
  align-items: center;
  transition: all 0.3s;
}

.checkbox.checked.data-v-e4e4508d {
  background-color: #FFFFFF;
  border-color: #FFFFFF;
}

.checkbox-icon.data-v-e4e4508d {
  color: #55AD67;
  font-size: 16rpx;
  font-weight: bold;
}

.agreement-text.data-v-e4e4508d {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.agreement-link.data-v-e4e4508d {
  font-size: 20rpx;
  color: #FFFFFF;
  text-decoration: underline;
  line-height: 1.4;
}

/* 底部版权信息 */
.footer.data-v-e4e4508d {
  position: absolute;
  bottom: 20rpx;
  font-size: 18rpx;
