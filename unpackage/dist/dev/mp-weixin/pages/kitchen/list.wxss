
.container.data-v-8fa596b8 {
  background-color: var(--color-bg);
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 搜索栏 */
.search-bar.data-v-8fa596b8 {
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}
.search-input.data-v-8fa596b8 {
  background-color: #F5F5F5;
  border-radius: 25rpx;
  padding: 0 25rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.search-icon.data-v-8fa596b8 {
  font-size: 24rpx;
  color: var(--color-text-auxiliary);
}
.search-field.data-v-8fa596b8 {
  flex: 1;
  height: 100%;
  border: none;
  outline: none;
  font-size: 24rpx;
  color: var(--color-text-primary);
}

/* 筛选标签 */
.filter-tabs.data-v-8fa596b8 {
  display: flex;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  background-color: #FFFFFF;
  overflow-x: auto;
  white-space: nowrap;
  margin-bottom: 10rpx;
}
.filter-tab.data-v-8fa596b8 {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: var(--color-text-secondary);
  background-color: #F5F5F5;
  transition: all 0.3s;
}
.filter-tab.active.data-v-8fa596b8 {
  background-color: #55AD67;
  color: #FFFFFF;
  font-weight: bold;
}
.filter-tab.data-v-8fa596b8:active {
  transform: scale(0.95);
}

/* 排序选项 */
.sort-options.data-v-8fa596b8 {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx 20rpx;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
}
.sort-option.data-v-8fa596b8 {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  display: flex;
  align-items: center;
  gap: 5rpx;
}
.sort-option.active.data-v-8fa596b8 {
  color: var(--color-primary);
  font-weight: bold;
}

/* 厨房列表 */
.kitchen-list.data-v-8fa596b8 {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.kitchen-card.data-v-8fa596b8 {
  background-color: #FFFFFF;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}
.kitchen-card.data-v-8fa596b8:active {
  transform: scale(0.98);
}
.kitchen-image.data-v-8fa596b8 {
  width: 100%;
  height: 200rpx;
  background-color: #F9F9F9;
  display: flex;
  justify-content: center;
